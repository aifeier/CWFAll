<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">
    <Button
        android:layout_width="match_parent"
        android:layout_height="320px"
        android:text="abc"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:src="@drawable/folder_fav"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>
    <GridView
        android:id="@+id/layout_gridview"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:numColumns="3"
        android:verticalSpacing="2px"
        android:horizontalSpacing="2px"
        android:overScrollMode="never"></GridView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="10px"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:text="@string/hello_world"
                android:textSize="32px"
                android:textColor="@color/black"
                />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="this is a CardView"
            android:textColor="@color/black"
            android:textColorHint="@color/red"
            android:layout_marginBottom="10px"
            android:gravity="bottom|left"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>