<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    
<!--    <GridView
        android:id="@+id/file_photos_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:layout_margin="2dp"
        android:numColumns="4"
        android:scrollbars="none"></GridView>-->

    <GridView
        android:id="@+id/flie_list_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:numColumns="3"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:scrollbars="none"
        android:drawSelectorOnTop="false"
        android:fadingEdgeLength="0.0dp"
        android:layoutAnimation="@anim/navagation_gridview_anim"
        android:cacheColorHint="@color/white">
    </GridView>

    <FrameLayout
        android:id="@+id/file_framlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6e6e6"
        android:visibility="gone"></FrameLayout>
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/holo_blue_dark"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="预览"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/file_select_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/holo_blue_light"
            android:text="确定(0/1)"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
